{
    auto_https off
}

:80 {
    encode gzip

    handle_path /static/* {
        root * /srv
        file_server
    }

    reverse_proxy app:8000 {
        health_uri /healthz
        health_interval 10s
        health_timeout 5s
        header_up X-Forwarded-Proto {scheme}
        header_up X-Forwarded-For {remote_host}
        header_up X-Real-IP {remote_host}
    }
}
